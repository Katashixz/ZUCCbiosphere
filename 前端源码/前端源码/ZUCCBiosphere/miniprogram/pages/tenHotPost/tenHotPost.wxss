.contain {
  width: 750rpx;
  margin-top: 20rpx;
}
.contain .singlepost {
  margin: 5rpx;
  height: 180rpx;
  width: 730rpx;
  display: flex;
  border: black 2rpx solid;
}
.contain .singlepost .left {
  height: 160rpx;
  width: 550rpx;
}
.contain .singlepost .left .top {
  height: 50rpx;
  width: 550rpx;
  display: flex;
}
.contain .singlepost .left .top .number {
  background: #e97b7b;
  border: #d84242 1rpx solid;
  margin: 5rpx;
}
.contain .singlepost .left .top .reportnum {
  height: 40rpx;
  line-height: 40rpx;
  align-content: center;
  padding-top: 10rpx;
  padding-left: 20rpx;
  font-size: 25rpx;
}
.contain .singlepost .left .comments {
  height: 120rpx;
  width: 550rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
}
.contain .singlepost .right {
  height: 150rpx;
  width: 150rpx;
  margin: 15rpx;
}
